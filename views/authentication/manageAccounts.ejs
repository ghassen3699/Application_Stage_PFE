<%- include("../partials/header"); -%>
    <!--external css-->
    <link href="/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="/lib/advanced-datatable/css/DT_bootstrap.css" />
    <!-- Custom styles for this template -->
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/style-responsive.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">


    <section id="main-content">
        <section class="wrapper">
            <div class="custom-box">
                <h3>Paramétres > Paramétre des utilisateurs</h3>
            </div>
            <div class="row mb">
                <!-- page start-->
                <div class="content-panel">
                    <div class="adv-table">

                        <br>


                        <table cellpadding="0" cellspacing="0" border="0" id="example" class="display table table-bordered">
                            <thead>
                                <tr>
                                    <th style="text-align: center;">USERNAME</th>
                                    <th class="hidden-phone" style="text-align: center;">NOM</th>
                                    <th class="hidden-phone" style="text-align: center;">PRENOM</th>
                                    <th class="hidden-phone" style="text-align: center;">ADRESSE MAIL</th>
                                    <th class="hidden-phone" style="text-align: center;">Mots de passe</th>
                                    <th class="hidden-phone" style="text-align: center;">Admin</th>
                                    <th class="hidden-phone" style="text-align: center;">Modifier</th>
                                    <th class="hidden-phone" style="text-align: center;">Supprmer</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% accounts.forEach(function(Account) { %>

                                    <tr class="gradeX">


                                        <td class="hidden-phone" style="text-align: center; font-size: medium;">
                                            <%= Account.USERNAME %>
                                        </td>
                                        <td class="center hidden-phone" style="text-align: center; font-size: medium;">
                                            <%= Account.NOM %>
                                        </td>
                                        <td class="center hidden-phone" style="text-align: center; font-size: medium;">
                                            <%= Account.PRENOM %>
                                        </td>
                                        <td class="center hidden-phone" style="text-align: center; font-size: medium;">
                                            <%= Account.EMAIL %>
                                        </td>
                                        <td class="center hidden-phone" style="text-align: center; font-size: medium;">
                                            <%= Account.PASSWORD %>
                                        </td>
                                        <% if (Account.ADMIN === 1){%>
                                            <td class="center hidden-phone" style="text-align: center; font-size: medium;">
                                                Oui
                                            </td>
                                            <%}else{%>
                                                <td class="center hidden-phone" style="text-align: center; font-size: medium;">
                                                    Non
                                                </td>
                                                <%}%>


                                                    <td class="center hidden-phone" style="text-align: center; font-size: medium;">
                                                        <a href="/modifier-account/<%= Account.ID_USER%>" style="color: goldenrod;" class="fa fa-refresh" aria-hidden="true"></a>
                                                    </td>
                                                    <td class="center hidden-phone" style="text-align: center; font-size: medium;">
                                                        <a href="/supprimer-account/<%= Account.ID_USER%>" style="color: red;" class="icon-remove"></a>
                                                        <img data="/xmaks-solid.svg"></img>
                                                    </td>
                                    </tr>

                                    <% }); %>

                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- page end-->
            </div>
            <!-- /row -->
            <!-- /wrapper -->
        </section>

        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

        <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js" defer></script>

        <script>
            $(document).ready(function() {
                $('#example').DataTable();
            });
        </script>





        <%- include("../partials/footer"); -%>